{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Project Meguru",
    "version": "0.3.1",
    "identifier": "icu.shizuku.meguru",
    "build": {
        "frontendDist": "../src"
    },
    "app": {
        "windows": [
            {
                "title": "Project Meguru",
                "label": "main",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": true
            }
        ],
        "withGlobalTauri": true,
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "android": {
            "autoIncrementVersionCode": false,
            "minSdkVersion": 30,
            "versionCode": 10
        },
        "icon": [
            "icons/favicon.ico"
        ]
    }
}